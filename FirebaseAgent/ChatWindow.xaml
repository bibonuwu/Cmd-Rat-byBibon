<Window x:Class="SharedChat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="500" Width="420" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="8">
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MessagesList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,4">
                            <TextBlock FontWeight="Bold"
                                       Text="{Binding Header}"/>
                            <TextBlock TextWrapping="Wrap"
                                       Text="{Binding Body}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,8,0,0">
            <TextBox x:Name="InputBox" Width="320" Height="28" KeyDown="InputBox_KeyDown"/>
            <Button Content="Send" Width="70" Height="28" Margin="8,0,0,0" Click="Send_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
