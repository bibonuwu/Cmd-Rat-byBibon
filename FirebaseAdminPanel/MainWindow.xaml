<Window x:Class="FirebaseAdminPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Админ Панель" Height="350" Width="500" Background="Black">
    <Border Margin="20,20,20,20" CornerRadius="20,20,20,20" Background="#FF191919" Padding="20,20,20,20">
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Logo.png" Width="60" Margin="0,0,0,20" />

            <StackPanel Orientation="Horizontal">
                <Label Foreground="White">Қосылып тұрған гаджетті таңда</Label>
                <ComboBox x:Name="MachineComboBox" Width="200" Height="30" FontSize="16" VerticalAlignment="Top" />
            </StackPanel>
             
                
                <TextBox x:Name="CommandBox" FontSize="16" Width="400" Margin="0,10,0,10" TextWrapping="Wrap" />
                <Button Content="Жіберу" FontSize="16"
    Click="SendCommand_Click"/>
           
            <TextBlock x:Name="ResultBlock" FontSize="14"
                  TextWrapping="Wrap" Margin="0,10,0,0" Foreground="White" />
        </StackPanel>
    </Border>
 
</Window>
