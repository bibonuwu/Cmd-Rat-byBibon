<Window x:Class="FirebaseAdminPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Админ Панель"
        Width="720" Height="520"
        Background="#0D0D0D"
        FontFamily="Segoe UI"
        TextOptions.TextFormattingMode="Display"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <!-- ================= THEME / RESOURCES ================= -->
    <Window.Resources>
        <!-- Цвета/кисти -->
        <Color x:Key="AccentColor">#7C5CFF</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="AccentBrushLight" Color="#A689FF"/>
        <SolidColorBrush x:Key="BgElevated" Color="#191919"/>
        <SolidColorBrush x:Key="BgBase"     Color="#111111"/>
        <SolidColorBrush x:Key="Stroke"     Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TextPrimary"   Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B8B8B8"/>

        <!-- Общая «карточка» -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgElevated}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.25" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка (Primary) -->
        <Style x:Key="Button.Primary" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource Stroke}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource AccentBrushLight}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#5E46CC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка (Secondary) -->
        <Style x:Key="Button.Secondary" TargetType="Button" BasedOn="{StaticResource Button.Primary}">
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource Stroke}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#2C2C2C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#202020"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox с watermark через Tag -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="bd"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="6,4,6,4"/>
                            <TextBlock x:Name="Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="12,0,12,0"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox без переопределения Template (надежнее) -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>

        <!-- Подпись -->
        <Style x:Key="Caption" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <!-- ================= LAYOUT ================= -->
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Style="{StaticResource Card}" Padding="14" Grid.Row="0">
            <DockPanel LastChildFill="True">
                <Image Source="/Logo.png" Width="36" Height="36" Margin="0,0,12,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Админ Панель" FontSize="20" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold"/>
                    <TextBlock Text="Қосылып тұрған гаджетті таңда" Style="{StaticResource Caption}"/>
                </StackPanel>
                <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <ComboBox x:Name="MachineComboBox" Width="260" VerticalAlignment="Center" Margin="12,0,0,0"/>
                </DockPanel>
            </DockPanel>
        </Border>

        <!-- BODY -->
        <Grid Grid.Row="1" Margin="0,14,0,14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Командная панель -->
            <Border Style="{StaticResource Card}" Grid.Column="0" Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Команда" Foreground="{StaticResource TextPrimary}" FontSize="16" FontWeight="SemiBold" Margin="2,0,0,8"/>

                    <TextBox x:Name="CommandBox"
                             Grid.Row="1"
                             Height="110"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Tag="Мысалы: notepad.exe немесе shutdown /s /t 0"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Style="{StaticResource Button.Secondary}" Margin="0,0,10,0" Click="SendCommand_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                <TextBlock Text="Произвольная"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource Button.Primary}" Click="SendCommand_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                <TextBlock Text="Жіберу"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Быстрые действия -->
            <Border Style="{StaticResource Card}" Grid.Column="1" Padding="16" Margin="14,0,0,0">
                <StackPanel>
                    <TextBlock Text="Быстрые действия" Foreground="{StaticResource TextPrimary}" FontSize="16" FontWeight="SemiBold" Margin="2,0,0,8"/>

                    <UniformGrid Columns="2" Rows="4" Margin="0,6,0,0" HorizontalAlignment="Stretch">
                        <Button Style="{StaticResource Button.Secondary}" Margin="6" Width="Auto" Click="BtnShutdown_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                <TextBlock Text="Выключить ПК"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource Button.Secondary}" Margin="6" Click="BtnExplorer_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                <TextBlock Text="Проводник"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource Button.Secondary}" Margin="6" Click="BtnNotepad_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                <TextBlock Text="Блокнот"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource Button.Secondary}" Margin="6" Click="BtnVCRedistDownload_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                <TextBlock Text="Скачать VC++"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource Button.Secondary}" Margin="6" Click="BtnVCRedistInstall_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                <TextBlock Text="Установить VC++"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource Button.Secondary}" Margin="6" Click="BtnOpenChat_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                <TextBlock Text="Открыть чат"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FOOTER / RESULT -->
        <Border Style="{StaticResource Card}" Grid.Row="2" Padding="14">
            <StackPanel>
                <TextBlock Text="Результат" Foreground="{StaticResource TextSecondary}" Margin="2,0,0,6"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="90">
                    <TextBlock x:Name="ResultBlock" Foreground="{StaticResource TextPrimary}" FontSize="14" TextWrapping="Wrap"/>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</Window>
